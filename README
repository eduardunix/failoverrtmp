#BUILDAR A IMAGEM
docker build  -t kombatklub/failover .

#INICIANDO DOCKER
sudo docker run -dit  --publish 1935:1935 kombatklub/failover

#LISTANDO DOCKER EM ESTADO DE RUNNING
docker ps


#PARANDO DOCKER
docker stop ID_DO_CONTAINER


